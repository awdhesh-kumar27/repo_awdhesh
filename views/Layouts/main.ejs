   <style>
    body{
        background-color: rgba(255, 255, 255, 0.89);
        box-sizing:border-box;
        margin:0px;
    }
    .input-block{
        color:darkred;
        width:300px;
        height:25px;
        text-align:center;
        border:5px solid rgb(0, 166, 255);
        border-radius:5px;
        background-color:aliceblue;
        font-size: medium;
    }
    .input-heading{
        color:rgb(15, 4, 138);
        font-size: larger;
    }
    .button-div{
      
        display:flex;
        flex-direction:row;
        column-gap:25%;
        justify-content:center;
    }
    .button{
        color:white;
        text-decoration:none;
        padding:10px 25px;
        border-radius:10px;
         background-image: linear-gradient(to top, red,orange);
    }
    .form-div{
        background-color:white;
        width:700px;
         height:700px;
         border:2px solid darkmagenta; 
        padding:20px;
        margin-left:30%;
        margin-right:30%;
        margin-top:50px;
        border-radius:10px;
    }

    .button:hover{
        color:rgb(11, 11, 130);
        background-color:rgb(176, 168, 236);
    }
    @media (max-width:700px){
        .form-div{
        margin-left:auto;
        margin-right:auto;
        }
        
        .button-div{
      flex-direction:column;
      column-gap:95%;
      row-gap:5px;
           }    
           .button{
       text-align:center;
        }
    }

</style>

